<PropertyList>

    <filter>
        <name>Damage Left Wing Type</name>
        <type>gain</type>

        <!-- Normal -->
        <input>
            <condition>
                <equals>
                    <property>/fdm/jsbsim/wing-damage/left-wing</property>
                    <value>0.0</value>
                </equals>
            </condition>
            <value>0</value>
        </input>

        <!-- Broken -->
        <input>
            <condition>
                <equals>
                    <property>/fdm/jsbsim/wing-damage/left-wing</property>
                    <value>1.0</value>
                </equals>
            </condition>
            <value>1</value>
        </input>

        <!-- Damaged -->
        <input>
            <value>2</value>
        </input>

        <output>
            <property>/sim/model/j3cub/damage/left-wing</property>
        </output>
    </filter>

    <filter>
        <name>Damage Right Wing Type</name>
        <type>gain</type>

        <!-- Normal -->
        <input>
            <condition>
                <equals>
                    <property>/fdm/jsbsim/wing-damage/right-wing</property>
                    <value>0.0</value>
                </equals>
            </condition>
            <value>0</value>
        </input>

        <!-- Broken -->
        <input>
            <condition>
                <equals>
                    <property>/fdm/jsbsim/wing-damage/right-wing</property>
                    <value>1.0</value>
                </equals>
            </condition>
            <value>1</value>
        </input>

        <!-- Damaged -->
        <input>
            <value>2</value>
        </input>

        <output>
            <property>/sim/model/j3cub/damage/right-wing</property>
        </output>
    </filter>
    
    <logic>
        <name>Engine Crashed</name>
        <input>
            <or>
                <property>/engines/active-engine/crash-engine</property>
                
                <!-- Nose touches the ground -->
                <property>/fdm/jsbsim/contact/unit[10]/WOW</property>

                <!--not-equals>
                    <property>/fdm/jsbsim/pontoon-damage/left-pontoon</property>
                    <value>0</value>
                </not-equals>
                <not-equals>
                    <property>/fdm/jsbsim/pontoon-damage/right-pontoon</property>
                    <value>0</value>
                </not-equals>
                <not-equals>
                    <property>/fdm/jsbsim/ski-damage/left-ski</property>
                    <value>0</value>
                </not-equals>
                <not-equals>
                    <property>/fdm/jsbsim/ski-damage/right-ski</property>
                    <value>0</value>
                </not-equals-->
            </or>
        </input>
        <output>
            <property>/engines/active-engine/crashed</property>
        </output>
    </logic>

    <logic>
        <name>Engine Killed</name>
        <input>
            <or>
                <property>/engines/active-engine/crashed</property>
            </or>
        </input>
        <output>
            <property>/engines/active-engine/killed</property>
        </output>
    </logic>

</PropertyList>
